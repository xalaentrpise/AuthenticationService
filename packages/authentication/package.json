{
  "name": "@xala-technologies/authentication",
  "version": "2.1.0",
  "description": "Norwegian-compliant authentication package with ID-porten, BankID, Feide integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:unit": "jest __tests__/unit",
    "test:integration": "jest __tests__/integration",
    "test:performance": "jest __tests__/performance",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "security:audit": "npm audit --audit-level moderate",
    "validate:auth": "node ../../scripts/validate-auth.js",
    "dev:start": "ts-node src/index.ts",
    "changelog:generate": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "keywords": [
    "authentication",
    "norwegian",
    "id-porten",
    "bankid",
    "feide",
    "rbac",
    "gdpr",
    "compliance",
    "typescript"
  ],
  "author": "Xala Technologies",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xala-technologies/authentication.git"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "jsonwebtoken": "^9.0.2",
    "node-jose": "^2.2.0",
    "axios": "^1.6.0",
    "crypto": "^1.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "conventional-changelog-cli": "^4.1.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "peerDependencies": {
    "express": "^4.18.0",
    "fastify": "^4.0.0"
  }
}
